<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>

    <cloud-backup>
        <!-- Incluir configuración esencial -->
        <include domain="sharedpref" path="digital_signage_prefs.xml" />

        <!-- Excluir datos grandes -->
        <exclude domain="cache" />
        <exclude domain="file" path="logs/" />
    </cloud-backup>

    <device-transfer>
        <!-- Permitir transferencia de configuración -->
        <include domain="sharedpref" path="digital_signage_prefs.xml" />

        <!-- Excluir cache y logs -->
        <exclude domain="cache" />
        <exclude domain="file" path="logs/" />
    </device-transfer>

</data-extraction-rules>